{
  "extends": "@formbase/typescript-config/nextjs.json",

  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },

  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
    "../../packages/email/send-mail.ts",
    ".eslintrc.cjs",
    "../../packages/trpc/react.tsx"
  ],
  "exclude": ["node_modules"]
}
